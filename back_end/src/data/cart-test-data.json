        "quantity": 1,
        "price": 320000,
        "image": "https://example.com/images/variants/birthday-chocolate-small-round.jpg"
      },
      "endpoint": "POST /api/cart/add-item"
    },
    {
      "note": "Add this item to cart - Bánh Kem Dâu Vừa",
      "requestBody": {
        "userId": "YOUR_USER_ID_HERE",
        "productId": "PRODUCT_ID_2",
        "variantId": "VARIANT_ID_5",
        "productName": "Bánh Kem Dâu Tây Tươi",
        "variantName": "Vừa - Vị Dâu",
        "quantity": 2,
        "price": 280000,
        "image": "https://example.com/images/variants/strawberry-cake-medium.jpg"
      },
      "endpoint": "POST /api/cart/add-item"
    },
    {
      "note": "Update quantity of item in cart",
      "requestBody": {
        "userId": "YOUR_USER_ID_HERE",
        "productId": "PRODUCT_ID_1",
        "variantId": "VARIANT_ID_1",
        "quantity": 3
      },
      "endpoint": "PUT /api/cart/update-item"
    },
    {
      "note": "Get user cart",
      "endpoint": "GET /api/cart/user/YOUR_USER_ID_HERE"
    },
    {
      "note": "Remove item from cart (use variantId)",
      "endpoint": "DELETE /api/cart/remove-items/VARIANT_ID_1",
